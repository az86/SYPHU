<UserControl x:Class="SYPHU.Views.WizardControls.Designs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox Margin="0 2 0 0">
            <Grid>
            	<Grid.RowDefinitions>
            		<RowDefinition/>  
					<RowDefinition/> 
					<RowDefinition/> 
					<RowDefinition/>       	
				</Grid.RowDefinitions>
                <RadioButton Grid.Row="0" Content="完全随机设计" IsChecked="{Binding IsCompletelyRandomisedBtnChecked}" IsEnabled="{Binding IsCompletelyRandomisedBtnEnabled}"/>
                <RadioButton Grid.Row="1" Content="随机区组设计" IsChecked="{Binding IsRandomisedBlockBtnChecked}" IsEnabled="{Binding IsRandomisedBlockBtnEnabled}"/>
                <RadioButton Grid.Row="2" Content="拉丁方设计" IsChecked="{Binding IsLatinSquareBtnChecked}" IsEnabled="{Binding IsLatinSquareBtnEnabled}"/>
                <RadioButton Grid.Row="3" Content="双交叉设计" IsChecked="{Binding IsCrossOverBtnChecked}" IsEnabled="{Binding IsCrossOverBtnEnabled}"/>     
			</Grid>
        </GroupBox>
    </Grid>
</UserControl>
